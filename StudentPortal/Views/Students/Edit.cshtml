@{
}
@model StudentPortal.Models.Entity.Student

<h1>Edit Student</h1>
<form method="post">
    <div>
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div>
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div>
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div>
        <label class="form-label">Phone</label>
        <input type="tel" class="form-control" asp-for="Phone" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Data</button>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Students">Delete</button>
    </div>

</form>